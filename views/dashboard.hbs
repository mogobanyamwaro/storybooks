<h5>Dashboard</h5>
<h4>Welcome {{name}}</h4>
<p>Here are your stories </p>
   
{{#if stories}}

    <table class="striped">
        <thead>
            <tr>
                <th>Tit le</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr>
                <td><a href="/stories/{{_id}}">{{title}}</a></td>
                <td>{{createdAt}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
<p>you have not created any stories</p>
{{/if}}